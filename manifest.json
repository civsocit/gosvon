{
  "manifest_version": 2,
  "name": "ГосВонь — Подсветка ботов",
  "description": "Расширение, подсвечивающее аккаунты ботов ВКонтакте.",
  "version": "1.0.1",
  "content_scripts": [
    {
      "matches": ["*://vk.com/*"],
      "js": ["jquery.min.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "128": "ico.png"
  },
  "browser_action": {
    "default_icon": "ico.png"
  },
  "permissions": [
    "*://api.gosvon.net/*"
  ]
}
